<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="langileak">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="langilea" type="tLangilea" maxOccurs="unbounded"></xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:complexType name="tLangilea">
       <xs:sequence>
            <xs:element name="izena" type="xs:string"/>
            <xs:element name="abizena" type="xs:string"/>
            <xs:element name="emaila" type="xs:string"/>
            <xs:element name="telefonoa">
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:pattern value="[0-9]{9}"/>
                    </xs:restriction>
                 </xs:simpleType>
            </xs:element>
            <xs:element name="data" type="xs:date"/>

            <xs:element name="nagusia" minOccurs="0">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="izena" type="xs:string"/>
                        <xs:element name="abizena" type="xs:string"/>
                    </xs:sequence>
                    <xs:attribute name="idNagusi" use="required">
                        <xs:simpleType>
                            <xs:restriction base="xs:string">
                                <xs:pattern value="[0-9]{8}"></xs:pattern>
                            </xs:restriction>
                        </xs:simpleType>
                    </xs:attribute>
                </xs:complexType>
            </xs:element>

            <xs:choice >
                <xs:element name="bulegariDatuak">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="lanpostua">
                                <xs:complexType>
                                    <xs:simpleContent>
                                        <xs:extension base="xs:string">
                                            <xs:attribute name="idLanpostu" type="xs:integer" use="required"/>
                                        </xs:extension>
                                    </xs:simpleContent>
                                </xs:complexType>
                            </xs:element>   
                        </xs:sequence> 
                    </xs:complexType>
                </xs:element>

                <xs:element name="saltzaileDatuak">
                    <xs:complexType>
                        <xs:sequence>
                        <xs:element name="erabiltzailea" type="xs:string"/>
                        <xs:element name="pasahitza" type="xs:string"/>
                        </xs:sequence>  
                    </xs:complexType>
                </xs:element>
            </xs:choice>

        </xs:sequence>
        <xs:attribute name="mota" use="required">
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="bulegaria"/>
                    <xs:enumeration value="saltzailea"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="idLangile" use="required">
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:pattern value="[0-9]{8}"></xs:pattern>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
    </xs:complexType>
</xs:schema>